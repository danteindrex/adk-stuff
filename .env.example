# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
PORT=8080

# WhatsApp Business API Configuration
# Get these values from your WhatsApp Business API provider dashboard
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id

# Webhook Configuration
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret

# Optional: Message Configuration
WHATSAPP_MESSAGE_TEMPLATE_NAMESPACE=your_template_namespace
WHATSAPP_MESSAGE_PREVIEW_URL=false
WHATSAPP_MESSAGE_TIMEOUT=30
WHATSAPP_API_VERSION=v17.0

# WhatsApp Message Configuration
WHATSAPP_MESSAGE_TEMPLATE_NAMESPACE=your_template_namespace
WHATSAPP_MESSAGE_PREVIEW_URL=false
WHATSAPP_MESSAGE_TIMEOUT=30

# Security
JWT_SECRET_KEY=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key
ADMIN_WHATSAPP_GROUP=admin_group_id

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
REDIS_URL=redis://localhost:6379/0

# Google Cloud (Optional)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
